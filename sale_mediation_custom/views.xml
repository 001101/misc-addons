<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record model="ir.ui.view" id="crm_case_form_view_leads">
			<field name="name">CRM - Leads Form</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
			<field name="arch" type="xml">
				<xpath expr="//header/button" position="replace">
					<button type="object" name="action_create_sale_case" class="oe_highlight" string="Create Sale Case" attrs="{'invisible':[('contract_ids', '!=', [])]}"/>
				</xpath>
				<xpath expr="//page[@string='Extra Info']" position="after">
					<page string="Sale cases" attrs="{'invisible':[('contract_ids', '=', [])]}">
						<field name="contract_ids"/>
					</page>
				</xpath>
			</field>
		</record>


        <record id="account_analytic_account_form_form" model="ir.ui.view">
            <field name="name">account.analytic.account.invoice.form.inherit</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="account_analytic_analysis.account_analytic_account_form_form"/>
            <field name="arch" type="xml">
				<xpath expr="//button[@name='set_pending']" position="replace">
				</xpath>
				<xpath expr="//button[@name='set_close']" position="replace">
				</xpath>
				<xpath expr="//button[@name='set_open']" position="replace">
				</xpath>
				<xpath expr="//button[@name='set_cancel']" position="replace">
				</xpath>
				<xpath expr="//field[@name='state']" position="replace">
					<field name="state" widget="statusbar"
                           statusbar_visible="lead,opp_identified,opp_qualified,quot_proposal_preparation,quot_proposal_sent,quot_contract_preparation,quot_contract_sent,sale_confirmation,sale_won" statusbar_colors='{"pending":"red", "template":"blue"}'/>
					<button type="object" name="action_set_state_opp_identified" class="oe_highlight" string="Prospect identified" states="lead"/>
					<button type="object" name="action_set_state_opp_qualified" class="oe_highlight" string="Prospect qualified" states="lead,opp_identified"/>
					<button type="action" name="%(action_create_proposal)d" class="oe_highlight" string="Create proposal" states="lead,opp_identified,opp_qualified"/>
					<button type="object" name="action_send_proposal" class="oe_highlight" string="Send proposal" states="quot_proposal_preparation"/>
					<button type="object" name="action_set_state_quot_contract_preparation" class="oe_highlight" string="Create contract (TODO)" states="quot_proposal_sent"/>
					<button type="object" name="action_set_state_quot_contract_sent" class="oe_highlight" string="Send contract (TODO)" states="quot_contract_preparation"/>
					<button type="object" name="action_set_state_sale_confirmation" class="oe_highlight" string="Contract signed" states="quot_contract_sent"/>
					<button type="object" name="action_set_state_sale_won" class="oe_highlight" string="Confirm sale &amp; create project" states="sale_confirmation"/>

					<button type="action" string="Administration" name="%(action_sale_case_administration)d"/>


				</xpath>
				<xpath expr="//field[@name='manager_id']" position="after">
					<!-- <field name="support_manager_id"/> -->
					<field name="commissioning_manager_id"/>
					<field name="business_manager_id"/>
					<field name="consultant_id"/>
					<field name="notetaker_id"/>
					<field name="proof_reader_id"/>
				</xpath>
				<xpath expr="//field[@name='company_id']" position="after">
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page string="Participants">
						<field name="participant_ids"/>
					</page>
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page string="Lead \ Opportunity">
						<group>
							<field name="lead_id"/>
						</group>
					</page>
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page string="Quotation \ Sale Order">
						<group>
							<field name="sale_order_id"/>
							<field name="proposal_id" invisible="True"/>

							<label for="open_proposal" string="Proposal"/>
							<button name="open_proposal" string="Open proposal" attrs="{'invisible':[('proposal_id', '=', False)]}" type="object"/>

							<!--
							<label for="open_contract" string="Contract"/>
							<button name="open_contract" string="Open contract" attrs="{'invisible':[('contract_id', '=', False)]}" type="object"/>
							-->
						</group>
						<field name="sale_order_lines"/>
					</page>
				</xpath>
				<!--
				<xpath expr="//notebook" position="inside">
					<page string="Administration" groups="access_custom.group_sales_full_rights">
					</page>
				</xpath>
				-->
			</field>
		</record>

        <record model="ir.ui.view" id="sale_case_kanban_view">
            <field name="name">Contract (sale case) - Kanban view</field>
            <field name="model">account.analytic.account</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" quick_create="false" edit="false">
                    <field name="name"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
							<div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
								<div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
									<span class="oe_e">Ã­</span>
									<ul class="oe_dropdown_menu">
										<li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
									</ul>
								</div>
								<div class="oe_kanban_content">
									<div><b><field name="name"/></b></div>
									<!--
								<t t-if="record.date_deadline.raw_value and record.date_deadline.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t> 

                                <div class="oe_kanban_footer_left" style="margin-top:5px;">
                                    <t t-raw="record.message_summary.raw_value"/>
                                    <field name="categ_ids"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>
                                    <div class="pull-left" groups="base.group_user">
                                        <field name="kanban_state" widget="kanban_state_selection"/>
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
									-->
								</div>

								<div class="oe_clear"></div>
							</div>



						</t>
					</templates>
				</kanban>
			</field>
		</record>




        <!-- Action Sales/Sales/Contracts -->
        <record id="action_account_analytic_overdue_all" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">account.analytic.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'default_type':'contract'}</field>
            <field name="domain">[('type','=','contract')]</field>
            <field name="search_view_id" ref="account_analytic_analysis.view_account_analytic_account_overdue_search"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new contract.
                </p><p>
                    Use contracts to follow tasks, issues, timesheets or invoicing based on
                    work done, expenses and/or sales orders. Odoo will automatically manage
                    the alerts for the renewal of the contracts to the right salesperson.
                </p>
            </field>
        </record>


        <menuitem action="action_account_analytic_overdue_all" id="account_analytic_analysis.menu_action_account_analytic_overdue_all" sequence="8" parent="base.menu_sales" name="Sales funnel"/>



		<delete id="crm.menu_crm_opportunities" model="ir.ui.menu"/>
		<delete id="crm.menu_crm_leads" model="ir.ui.menu"/>
		<delete id="sale.menu_sale_quotations" model="ir.ui.menu"/>
		<delete id="sale.menu_sale_order" model="ir.ui.menu"/>


        <!-- Sale Order Form View  -->
        <record model="ir.ui.view" id="view_order_form">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
				<!-- delete stuff of default workflow -->
				<xpath expr="//header" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
			</field>
		</record>

        <!-- CRM Lead Form View  -->
        <record model="ir.ui.view" id="crm_case_form_view_oppor">
			<field name="name">Opportunity</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
			<field name="arch" type="xml">
				<!-- delete stuff of default workflow -->
				<xpath expr="//header" position="attributes">
					<attribute name="invisible">1</attribute>
				</xpath>
			</field>
		</record>

	</data>

	<data noupdate="1">
        <record id="email_template_proposal" model="email.template">
            <field name="name">Send Proposal</field>
            <!--<field name="email_from">${(object.user_id.email or '')|safe}</field>-->
            <field name="subject">${object.company_id.name|safe} Proposal (Ref ${object.name or 'n/a' })</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <!--<field name="model_id" ref="account_analytic_analysis.model_account_analytic_analysis"/>-->
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="action_report_proposal"/>
            <field name="report_name">${object.name.replace('/','')}-proposal</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="body_html"><![CDATA[

    <p>Hello ${object.partner_id.name},</p>

]]></field>
		</record>
	</data>

</openerp>
