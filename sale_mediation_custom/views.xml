<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record model="ir.ui.view" id="crm_case_form_view_leads">
			<field name="name">CRM - Leads Form</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
			<field name="arch" type="xml">
				<xpath expr="//header/button" position="replace">
					<button type="object" name="action_create_sale_case" class="oe_highlight" string="Create Sale Case" attrs="{'invisible':[('contract_ids', '!=', [])]}"/>
				</xpath>
				<xpath expr="//page[@string='Extra Info']" position="after">
					<page string="Sale cases" attrs="{'invisible':[('contract_ids', '=', [])]}">
						<field name="contract_ids"/>
					</page>
				</xpath>
			</field>
		</record>


        <record id="account_analytic_account_form_form" model="ir.ui.view">
            <field name="name">account.analytic.account.invoice.form.inherit</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="account_analytic_analysis.account_analytic_account_form_form"/>
            <field name="arch" type="xml">
				<xpath expr="//button[@name='set_pending']" position="replace">
				</xpath>
				<xpath expr="//button[@name='set_close']" position="replace">
				</xpath>
				<xpath expr="//button[@name='set_open']" position="replace">
				</xpath>
				<xpath expr="//button[@name='set_cancel']" position="replace">
				</xpath>
				<xpath expr="//field[@name='state']" position="replace">
					<button name="new" class="oe_highlight" string="move to New" states="lead"/>
					<button name="qualified" class="oe_highlight" string="move to Qualified" states="lead,new"/>
					<button type="action" name="%(action_create_proposal)d" class="oe_highlight" string="move to Quotation" states="lead,new,qualified"/>
					<button name="edit_proposal" string="Edit proposal" attrs="{'invisible':['|',('state', '!=', 'quotation'),('proposal_id', '=', False)]}" type="object"/>
					<button name="open_proposal" string="Open proposal" attrs="{'invisible':['|',('state', '!=', 'negotiation'),('proposal_id', '=', False)]}" type="object"/>
					<button type="object" name="action_send_proposal" class="oe_highlight" string="Send proposal" states="quotation"/>
					<!--<button type="object" name="action_set_state_negotiation" class="oe_highlight" string="move to Negotiation" states="quotation"/>-->

					<button type="action" string="Administration" name="%(action_sale_case_administration)d" groups="access_custom.group_sales_full_rights"/>
					<field name="state" widget="statusbar"
                           statusbar_visible="lead,new,qualified,quotation,negotiation,sale_won" statusbar_colors='{"pending":"red", "template":"blue"}'/>
				</xpath>
				<xpath expr="//field[@name='manager_id']" position="after">
					<!-- <field name="support_manager_id"/> -->
					<field name="section_id"/>
					<field name="commissioning_manager_id"/>
					<field name="business_manager_id"/>
					<field name="consultant_id"/>
					<field name="notetaker_id"/>
					<field name="proof_reader_id"/>
				</xpath>
				<xpath expr="//field[@name='company_id']" position="after">
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page string="Participants">
						<field name="participant_ids"/>
					</page>
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page string="Lead \ Opportunity">
						<group>
							<field name="lead_id" context="{'form_view_ref':'crm.crm_case_form_view_oppor'}" attrs="{'invisible':[('lead_id_type', '=', 'lead')]}" readonly="1"/>
							<field name="lead_id2" context="{'form_view_ref':'crm.crm_case_form_view_leads'}" attrs="{'invisible':[('lead_id_type', '!=', 'lead')]}" readonly="1"/>
							<field name="lead_id_type" readonly="1"/>
							<field name="lead_id_priority" widget="priority"/>

                            <label for="lead_id_planned_revenue"/>
                            <h2>
                                <field name="currency_id" invisible="1"/>
                                <field name="lead_id_planned_revenue" class="oe_inline" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                <span class="oe_grey"> at </span>
                                <field name="lead_id_probability" class="oe_inline" widget="integer"/>%%
                            </h2>

						</group>
					</page>
				</xpath>
				<xpath expr="//notebook" position="inside">
					<page string="Quotation \ Sale Order">
						<group>
							<field name="sale_order_id" readonly="True"/>
							<field name="proposal_id" invisible="True"/>

							<!--
							<label for="open_proposal" string="Proposal"/>
							<button name="open_proposal" string="Open proposal" attrs="{'invisible':[('proposal_id', '=', False)]}" type="object"/>
							-->
							<field name="sale_order_state"/>
						</group>
						<field name="sale_order_lines"/>
					</page>
				</xpath>
				<!--
				<xpath expr="//notebook" position="inside">
					<page string="Administration" groups="access_custom.group_sales_full_rights">
					</page>
				</xpath>
				-->
			</field>
		</record>

