<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_sale_case_administration" model="ir.actions.act_window">
            <field name="name">Sale case administration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale_mediation_custom.sale_case_administration</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_sale_case_administration" model="ir.ui.view">
            <field name="name">sale_case_administration</field>
            <field name="model">sale_mediation_custom.sale_case_administration</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="state"/>
                        <field name="lead_id"/>
                        <field name="sale_order_id"/>
                    </group>
                    <footer>
                        <button name="action_apply" string="Apply" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="view_opportunity_to_sale_case" model="ir.ui.view">
            <field name="name">opportunity_to_sale_case</field>
            <field name="model">sale_mediation_custom.opportunity_to_sale_case</field>
            <field name="arch" type="xml">
                <form>
					<p>Click apply to create sale funnel from selected opportunity</p>
                    <group>
						<field name="state"/>
                    </group>
                    <footer>
                        <button name="action_apply" string="Apply" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_proposal" model="ir.actions.act_window">
            <field name="name">create proposal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale_mediation_custom.create_proposal</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_create_proposal" model="ir.ui.view">
            <field name="name">Create proposal</field>
            <field name="model">sale_mediation_custom.create_proposal</field>
            <field name="arch" type="xml">
                <form>
                    <group>
						<group>
							<field name="proposal_template_id" domain="[('res_model', '=', 'sale.order')]"/>
						</group>
                    </group>
                    <footer>
                        <button name="action_apply" string="Create proposal" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>


	 </data>
</openerp>
